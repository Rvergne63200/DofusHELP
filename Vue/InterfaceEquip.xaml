<UserControl x:Class="Vue.InterfaceEquip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vue"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image Source="Ressources/inventory.png" Grid.Column="1"></Image>
            <Grid Grid.Column="1" Margin="0,0,0,-0.4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="89*"/>
                    <RowDefinition Height="203*"/>
                    <RowDefinition Height="158*"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="1" Source="{Binding Classe.Image}" Height="200" VerticalAlignment="Top" Margin="140,0"/>
            </Grid>
           


        </Grid>
    </DockPanel>
</UserControl>
